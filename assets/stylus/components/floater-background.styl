.floater-background {

    position: fixed;
    top: 0;
    right: 0;
    bottom: 0;
    left: 0;
    z-index: 1040;
    background-color: rgba(0,0,0,0.8);
    opacity: 0;
    visibility: hidden;
    transition: .15s linear opacity;

    &.js-active {
        opacity: 1;
        visibility: visible;
    }
}